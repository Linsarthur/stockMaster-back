generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users_table {
  user_id       Int      @id @default(autoincrement())
  user_name     String   @db.VarChar(100)
  user_email    String   @unique @db.VarChar(255)
  user_phone    String?  @unique @db.VarChar(255)
  user_cpf      String?  @unique @db.VarChar(255)
  user_password String   @db.VarChar(255)
  user_role     UserRole @default(MANAGER)
}

model batch {
  batch_id     Int        @id @default(autoincrement())
  batch_number Int        @unique
  products     products[]
}

model products {
  product_id       Int        @id @default(autoincrement())
  product_name     String
  product_price    Decimal?    @db.Decimal(10, 2)
  product_discount Decimal?   @db.Decimal(5, 2)
  product_amount   Int
  batch_idfk       Int?
  batch            batch?      @relation(fields: [batch_idfk], references: [batch_id], onDelete: Cascade)
  category_idfk    Int?
  category         categories? @relation(fields: [category_idfk], references: [category_id], onDelete: Cascade)

  @@index([batch_idfk])
  @@index([category_idfk])
}

model categories {
  category_id          Int        @id @default(autoincrement())
  category_name        String
  category_description String
  products             products[]
}

enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
}
